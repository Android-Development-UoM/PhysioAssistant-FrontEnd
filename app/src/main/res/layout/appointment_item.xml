<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/serviceCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/serviceCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/serviceName"
                android:text="Αθλητική Μάλαξη"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <RelativeLayout
                android:id="@+id/addressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/serviceName">


                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/locationImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:layout_toEndOf="@id/locationImage"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:id="@+id/address"
                    android:text="Θεσσαλονίκη, 3"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timeHeaderLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressLayout">

                <TextView
                    android:id="@+id/dateHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ημέρα"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/timeHeader"
                    android:layout_toEndOf="@id/dateHeader"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ώρα"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_below="@id/dateHeader"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/3"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@id/timeHeader"
                    android:layout_alignStart="@id/timeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="12:00"
                    android:textColor="@color/black"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CFC1C1" />

</RelativeLayout>